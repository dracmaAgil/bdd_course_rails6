%header{role:'banner'}
  %nav.navbar.navbar-expand-lg.navbar-light.navbar-fixed-top.navbar.navbar-dark{role:'navigation'}
    .container-fluid
      = link_to "blog App", root_path, class: 'navbar-brand'
      %button.navbar-toggler{'aria-controls' => 'navbarSupportedContent', 'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation', 'data-bs-target' => '#navbarSupportedContent', 'data-bs-toggle"'=> 'collapse', type: 'button'}
        %span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.justify-content-end
        %ul.navbar-nav.mb-2.mb-lg-0
          %li.nav-item= link_to 'Authors', '#', class: 'nav-link active'
          -if user_signed_in?
            %li.nav-item= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link active'
            %span.navbar-text= "Signed in as #{current_user.email}"
          -else
            %li.nav-item= link_to 'Sing up', new_user_registration_path, class: 'nav-link active'
            %li.nav-item= link_to 'Sing in', new_user_session_path, class: 'nav-link active'
