.row{class: 'align-items-center'}
  .col-md-12
    =form_for(@article, html: {class: 'form-horizontal', role: 'form'}) do |f|
      - if @article.errors.any?
        .card.bg-danger.text-white.mb-3.col-md.ofsset-md-1
          .card-header
            %h5.card-title
              = pluralize(@article.errors.count, 'error')
              prohibited this article from being saved:
            .card-body
              %ul 
                - @article.errors.full_messages.each do |msg|
                  %li.card-text= msg
      .input-group.mb-3
        .col-md-1{class: 'form-label'}
          =f.label :title
        .col-md-11
          =f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true
      .input-group.mb-3
        .col-md-1{class: 'form-label'}
          =f.label :body
        .col-md-11
          =f.text_area :body, rows:10, class: 'form-control', placeholder: 'Body of article', autofocus: true
      .input-group.mb-3
        .col-md-12.col-md.ofsset-md-1
          =f.submit class:'btn btn-primary btn-lg float-lg-end', disable_with: 'Creating new article...'