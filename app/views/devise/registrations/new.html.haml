%h2.text-center Sign up
.row
  .col-md-12

    = form_for(resource, as: resource_name, html: {class:'form-horizontal', form: 'form'}, 
      url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .input-group.mb-3
        .control-label.col-md-3
          = f.label :email
        .col-md-9
          = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email"
      .input-group.mb-3
        .control-label.col-md-3
          = f.label :password
        .col-md-9
          = f.password_field :password, class: 'form-control', autocomplete: "off"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
            %br
      .input-group.mb-3
        .control-label.col-md-3
          = f.label :password_confirmation
        .col-md-9
          = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"
      .input-group.mb-3
        .col-md-9.offset-md-3
          = f.submit "Sign up", class: 'btn btn-primary btn-lg'
      .input-group.mb-3
        .col-md-9.offset-md-3.sign-link
          = render "devise/shared/links"
